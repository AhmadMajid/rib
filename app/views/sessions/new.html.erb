<div class="sixteen columns">
    <h1>Super Secret Login</h1>

    <% if flash[:alert] %>
        <p id="notice"><%= flash[:alert] %></p>
    <% end %>

    <%= form_tag do %>
        <fieldset>
            <legend>Log In</legend>

            <div class="field">
                <%= label_tag :name, 'User' %>
                <%= text_field_tag :name, params[:name] %>
            </div>
            <div class="field">
                <%= label_tag :password, 'Password' %>
                <%= password_field_tag :password, params[:password] %>
            </div>

            <div class="actions">
                <%= submit_tag "Login" %>
            </div>
        </fieldset>
    <% end %>
</div>