<!DOCTYPE html>
<html>
<head>
  <title>Rib</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if session[:user_id] %>
    <div class="admin-toolbox">
        Logged in as <%= User.find(session[:user_id]).name %>
        <%= button_to 'Logout', logout_path, method: :delete %>
    </div>
<% end %>

<%= yield %>

</body>
</html>
