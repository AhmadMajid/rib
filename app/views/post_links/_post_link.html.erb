<!-- Too many queries! -->
<% pf = Post.find(post_link.post_from) %>
<% pt = Post.find(post_link.post_to) %>

<%=
    link_to(
        ">>#{post_link.post_from}
            #{if pt.discussion_id != pf.discussion_id
                pt.id == pt.discussion.posts.first.id ? " (Cross OP)" : " (Cross)"
            end}",
        "#{url_for pf.discussion}#p#{pf.id}",
        { class: 'post-backquote'}
    )
%>